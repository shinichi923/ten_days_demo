<% unless current_user?(user) %>
  <% if current_user.following?(user) %>
    <%= link_to "Unfollow", unfollow_user_path(user), class: "btn btn-large", method: :delete %>
  <% else %>
          <%= button_to "Follow", follow_user_path(user), class: "btn btn-large btn-primary" %>
  <% end %>
<% end %>